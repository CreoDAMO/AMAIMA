modules = ["nodejs-20", "python-3.12"]
[agent]
expertMode = true

[nix]
channel = "stable-25_05"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "AMAIMA Frontend"

[[workflows.workflow]]
name = "AMAIMA Frontend"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd amaima/frontend && npm run dev"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[ports]]
localPort = 5000
externalPort = 80

[deployment]
deploymentTarget = "autoscale"
run = ["bash", "-c", "cd amaima/frontend && npm run start"]
build = ["bash", "-c", "cd amaima/frontend && npm run build"]
