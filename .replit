modules = ["python-3.11", "nodejs-20"]
[agent]
expertMode = true
integrations = ["stripe:2.0.0"]

[nix]
channel = "stable-25_05"
packages = ["jdk17_headless", "libiconv", "libxcrypt", "libyaml", "postgresql"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "AMAIMA Frontend"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "AMAIMA Backend"

[[workflows.workflow]]
name = "AMAIMA Frontend"
author = "agent"

[workflows.workflow.metadata]
outputType = "webview"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd amaima/frontend && npm run dev -- --webpack"
waitForPort = 5000

[[workflows.workflow]]
name = "AMAIMA Backend"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd amaima/backend && python -m uvicorn main:app --host 0.0.0.0 --port 8000 --reload"
waitForPort = 8000

[workflows.workflow.metadata]
outputType = "console"

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 8000
externalPort = 8000

[deployment]
deploymentTarget = "autoscale"
run = ["bash", "-c", "cd amaima/backend && python -m uvicorn main:app --host 0.0.0.0 --port 5000 & cd amaima/frontend && npm start"]
build = ["bash", "-c", "cd amaima/frontend && npm run build"]

[userenv]

[userenv.shared]
NEXT_PUBLIC_API_URL = "http://localhost:8000"
AMAIMA_EXECUTION_MODE = "execution-enabled"
COSMOS_NIM_URL = "https://integrate.api.nvidia.com/v1"
BIONEMO_NIM_URL = "https://integrate.api.nvidia.com/v1"
